# Environment variables for Knock-Knock Portal
# Copy this file to .env and fill in your values
# NEVER commit the .env file to git!

# ============================================================================
# REQUIRED: Security Secrets
# ============================================================================

# Admin password (bcrypt hash)
# Generate with: htpasswd -bnBC 10 "" your_password | tr -d ':\n'
# Or use: backend/scripts/generate_password_hash.sh
ADMIN_PASSWORD_BCRYPT_HASH=

# JWT signing secret (32+ random characters)
# Generate with: openssl rand -base64 32
JWT_SIGNING_SECRET_KEY=

# ============================================================================
# Optional: Application Settings
# ============================================================================

# Timezone (default: UTC)
TZ=UTC

# Gin mode: debug, release, test (default: release)
GIN_MODE=release

# ============================================================================
# Optional: Logging
# ============================================================================

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Log format: json, console (default: json)
LOG_FORMAT=json
